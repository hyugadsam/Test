@model WebApplication1.Models.DateModel
@{ 
}
<div class="container body-content" style="margin-top:20px">

    <form style="margin-top:10px" asp-controller="Account" asp-action="Login" method="post">

        <div class="form-group">
            @Html.Label("Fecha", new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.Date.ToString("yyyy-MM-dd") } })
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.Date.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger", })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary mb-3" />
        </div>


    </form>
</div>



